script(src='js/NOE/front_view_doc.js')
//p= docs
//p= lengths
input#num_of_new_ispoln(type='hidden', name='num_of_new_ispoln', value= num_of_new_ispoln)
p
table.table.table-bordered.noe-table
	thead.thead-default
		tr
			th Тип документа
			th Номер документа
			th Дата документа
			th Руководитель
			th Описание
			th Действия
			th Пункт
			th Дата исполнения
			th Контроль
			th Статус

	tbody
		each val, index in docs
			tr
				//тип документа
				td(rowspan=lengths[index])
					= type_docs[val.doc_type]
					
				//номер документа
				td(rowspan=lengths[index])
					= val.doc_num
					
				//дата документа
				td.front_date(rowspan=lengths[index], id="data_" + val._id)
					= val.doc_date


				//руководитель
				td.text-center(rowspan=lengths[index] style = 'vertical-align: middle;')
					span.badge.badge-success(title= all_users_long[val.doc_ruc])
						= all_users_short[val.doc_ruc]

				//описание
				td(rowspan=lengths[index])
					= val.doc_about

				//Файл
				td(rowspan=lengths[index], style="font-size: 1.2rem;")
					input(type='hidden', id='username_' + val._id, name='username_' + val._id, value= username)
					//input(type='hidden', id='punkts_' + val._id, name='punkts_' + val._id + '[]', value= number_of_punkt_in_base[index])
					a.ref_download_ispoln.m-r-10(href='files/' + val.filename download='' title='Скачать' name='d_' + val._id)
						i.mdi.mdi-download.text-success
					a.ref_download_ispoln.m-r-10(href='files/' + val.filename title='Просмотреть' name='e_' + val._id)
						i.mdi.mdi-eye.text-success
					a.ref_transfer.m-r-10(href='#ModalTransfer' data-toggle='modal' data-animation='slit' data-plugin='custommodal' data-overlayspeed='100' data-overlaycolor='#36404a' title='Отписать' name='transfer_' + val._id id='transfer_' + val._id)
						i.mdi.mdi-sitemap.text-success

				//Пункт
				td.text-center
					= val.doc_punkts[0]['num_punkt']
					//= 'jjjj' + number_of_punkt_in_base[0]

				//Дата пункта
				td.front_date
					= val.doc_punkts[0]['date']

				//Контроль
				td
					each val2, index2 in val.doc_punkts[0]['kontrols']
						span.badge.badge-success.m-r-5(title= all_users_long[index2])
							= all_users_short[index2]

				//Статус
				td.text-center

						if(val.doc_punkts[0]['ispoln'][username]['oznakomlen'] == true && val.doc_punkts[0]['ispoln'][username]['ispolneno'] == false)
							span.badge.badge-warning.m-r-5
								= 'ознакомлен'

						if(val.doc_punkts[0]['ispoln'][username]['oznakomlen'] == false && val.doc_punkts[0]['ispoln'][username]['ispolneno'] == false)
							span.badge.badge-danger.m-r-5
								= 'не ознакомлен'
								
						if((val.doc_punkts[0]['ispoln'][username]['oznakomlen'] == false && val.doc_punkts[0]['ispoln'][username]['ispolneno'] == true) || (val.doc_punkts[0]['ispoln'][username]['oznakomlen'] == true && val.doc_punkts[0]['ispoln'][username]['ispolneno'] == true))
							span.badge.badge-success.m-r-5
								= 'исполнено'

			//здесь дорисовываем ещё строки, по количеству пунктов
			- for(var i = 1; i < lengths[index]; i++)
				tr
					//Пункт
					td.text-center
						= val.doc_punkts[i]['num_punkt']
					
					//Дата пункта
					td.front_date
						= val.doc_punkts[i]['date']
					
					//Контроль
					td
						each val2, index2 in val.doc_punkts[i]['kontrols']
							span.badge.badge-success.m-r-5(title= all_users_long[index2])
								= all_users_short[index2]
					//Статус
					td.text-center
							if(val.doc_punkts[i]['ispoln'][username]['oznakomlen'] == true && val.doc_punkts[i]['ispoln'][username]['ispolneno'] == false)
								span.badge.badge-warning.m-r-5
									= 'ознакомлен'
							if(val.doc_punkts[i]['ispoln'][username]['oznakomlen'] == false && val.doc_punkts[i]['ispoln'][username]['ispolneno'] == false)
								span.badge.badge-danger.m-r-5
									= 'не ознакомлен'
							if((val.doc_punkts[i]['ispoln'][username]['oznakomlen'] == false && val.doc_punkts[i]['ispoln'][username]['ispolneno'] == true) || (val.doc_punkts[i]['ispoln'][username]['oznakomlen'] == true && val.doc_punkts[i]['ispoln'][username]['ispolneno'] == true))
								span.badge.badge-success.m-r-5
									= 'исполнено'
.row#message1
